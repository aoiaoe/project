<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cz.spring_cloud_alibaba.dao.AccountMapper">


    <update id="costFee">
        update
            account
        set
            balance = balance - #{fee}
        where
            user_id = #{userId}
            and balance >= #{fee}
    </update>
</mapper>
